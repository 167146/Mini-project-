<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#FFF3F8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="How are you feeling today?"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#7D3C98"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/happyButton"
        android:text="ðŸ˜Š Happy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#A8E6CF"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/sadButton"
        android:text="ðŸ˜¢ Sad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#FF8C94"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/anxiousButton"
        android:text="ðŸ˜Ÿ Anxious"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#FFD3B6"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/gratefulButton"
        android:text="ðŸ™ Grateful"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#FFDAC1"
        android:textColor="#000000"/>

    <TextView
        android:text="Your Mood History:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#7D3C98"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/moodRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
